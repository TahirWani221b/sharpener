<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <% if (editing){ %>

                <% var action='/admin/update-product/' + product.id ; var submitButtonText='Update Product' ; var
                    title=product.title; var imageUrl=product.imageUrl; var price=product.price; var
                    description=product.description; %>

                    <% }else{ %>

                        <% var action='/admin/add-product' ; var submitButtonText='Add Product' ; var title='' ; var
                            imageUrl='' ; var price='' ; var description='' ; %>

                            <% } %>


                                <main>
                                    <form class="product-form" action="<%= action %>" method="POST">
                                        <div class="form-control">
                                            <label for="title">Title</label>
                                            <input type="text" name="title" id="title" value="<%= title %>">
                                        </div>
                                        <div class="form-control">
                                            <label for="imageUrl">Image URL</label>
                                            <input type="text" name="imageUrl" id="imageUrl" value="<%= imageUrl %>">
                                        </div>
                                        <div class="form-control">
                                            <label for="price">Price</label>
                                            <input type="number" name="price" id="price" step="0.01"
                                                value="<%= price %>">
                                        </div>
                                        <div class="form-control">
                                            <label for="description">Description</label>
                                            <textarea name="description" id="description"
                                                rows="5"><%= description %></textarea>
                                        </div>

                                        <button class="btn" type="submit">
                                            <%= submitButtonText %>
                                        </button>
                                    </form>
                                </main>
                                <%- include('../includes/end.ejs') %>