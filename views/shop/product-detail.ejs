    <body>
        <%- include('../includes/navigation.ejs') %>
            <main class="centered">
                <% if(Object.keys(prods).length>0){ %>
                    <h1>
                        <%= prods.title %>
                    </h1>
                    <hr>
                    <div>
                        <img src="<%= prods.imageUrl%>" alt="<%= prods.title %>" width="500">
                    </div>
                    <h2>
                        <%= prods.price %>
                    </h2>
                    <p>
                        <%= prods.description %>
                    </p>
                    <%- include('../includes/add-to-cart.ejs',{product: prods}) %>
                        <% } %>
            </main>
            <%- include('../includes/end.ejs') %>